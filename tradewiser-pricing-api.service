[Unit]
Description=TradeWiser Pricing API Service
After=network.target

[Service]
Type=simple
User=www-data
Group=www-data
WorkingDirectory=/var/www/pricing.tradewiser.in
Environment="PATH=/var/www/pricing.tradewiser.in/venv/bin"
ExecStart=/var/www/pricing.tradewiser.in/venv/bin/uvicorn main:app --host 0.0.0.0 --port 8000 --workers 4
Restart=always
RestartSec=10

# Logging
StandardOutput=append:/var/log/tradewiser-pricing/api.log
StandardError=append:/var/log/tradewiser-pricing/api-error.log

# Security
NoNewPrivileges=true
PrivateTmp=true

[Install]
WantedBy=multi-user.target
